---
import { scrape } from "../scripts/scrape"
import Prescription from "../components/Prescription.astro"

const response = await fetch('https://www.bsvonline.ch/fr/prescriptions/')
const htmlText = await response.text()

const scraped = scrape(htmlText)

console.log(scraped)

const API = "https://79yex6i5.api.sanity.io/v1/data/query/production"
const query = `?query=*[_type=="prescription"] | order(code asc)`

const res = await fetch(API + query)

if (!res.ok) {
  console.error('Error Fetching')
}

const data = await res.json()

const prescriptions = data.result

